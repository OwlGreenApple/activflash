{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 2,
  "name": "__MSG_lcl_ext_name__",
  "description": "__MSG_lcl_ext_desc__",
  "short_name": "Activflash",
  "default_locale": "en",
  "version": "0.1",
  "icons": {
    "16": "img/16.png",
    "48": "img/48.png",
    "64": "img/64.png",
    "128": "img/128.png",
    "256": "img/256.png"
  },
  "browser_action": {
    "default_title": "Activflash",
    "default_icon": "img/48.png"
  },
  "permissions": [
    "notifications",
    "storage",
    "tabs",
    "cookies",
    "browsingData",
    "unlimitedStorage",
    "background",
    "identity",
    "*://*.activflash.com/*",
    "*://*.instagram.com/*"
  ],
  "background": {
    "scripts": [
      "js/jquery.js",
      "js/background.js"
    ],
    "persistent": true
  },
  "web_accessible_resources": [
    "img/*",
    "fonts/*",
    "js/*",
    "css/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.instagram.com/*"
      ],
      "js": [
        "js/jquery.js",
        "js/bootstrap.js",
        "js/content.js"
      ],
      "css": [
        "css/bootstrap.css"
      ]
    }
  ]
}